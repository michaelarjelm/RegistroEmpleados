<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RegistroEmpleados.AppMovil.Vistas.EditarEmpleado"
             Title="Editar Empleado">
    <ScrollView>
        <StackLayout Padding="10" Spacing="10">
            <Label Text="Primer Nombre:" />
            <Entry x:Name="PrimerNombreEntry" />

            <Label Text="Segundo Nombre:" />
            <Entry x:Name="SegundoNombreEntry" />

            <Label Text="Primer Apellido:" />
            <Entry x:Name="PrimerApellidoEntry" />

            <Label Text="Segundo Apellido:" />
            <Entry x:Name="SegundoApellidoEntry" />

            <Label Text="Correo ElectrÃ³nico:" />
            <Entry x:Name="CorreoEntry" Keyboard="Email" />

            <Picker x:Name="CargoPicker"
                Title="Seleccionar Cargo"
                ItemsSource="{Binding ListaCargos}" />

            <Label Text="Sueldo:" />
            <Entry x:Name="SueldoEntry" />
            
            <Button Text="Actualizar"
                    x:Name="GuardarButton"
                    TextColor="White"
                    FontAttributes="Bold" />
        </StackLayout>
    </ScrollView>
</ContentPage>
